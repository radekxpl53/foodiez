<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="510.0" prefWidth="555.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.radek.restauracja.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="odswiezBtn" mnemonicParsing="false" onAction="#refreshListView" text="Odśwież" />
   <TableView fx:id="tableDania" editable="true" prefHeight="200.0" prefWidth="200.0">
     <columns>
         <TableColumn fx:id="nazwaColumn" prefWidth="75.0" text="Nazwa" />
         <TableColumn fx:id="opisColumn" prefWidth="75.0" text="Opis" />
         <TableColumn fx:id="cenaColumn" prefWidth="75.0" text="Cena" />
         <TableColumn fx:id="kategoriaColumn" prefWidth="75.0" text="Kategoria" />
     </columns>
   </TableView>
    <TextField fx:id="nazwaInput" prefHeight="25.0" prefWidth="325.0" />
    <TextField fx:id="opisInput" />
    <TextField fx:id="cenaInput" />
    <TextField fx:id="kategoriaInput" />
    <Button fx:id="dodajBtn" mnemonicParsing="false" onAction="#onHelloButtonClick" text="Dodaj" />
</VBox>
